static void Main()
    {
		Console.WriteLine("請輸入一段文字：");
        string str = Console.ReadLine(); 

        int index = str.IndexOf('我');
        if (index != -1)
        {
            Console.WriteLine($"字元 '我' 首次出現的位置: {index}");
        }
        else
        {
            Console.WriteLine("字元 '我' 不在字串中");
        }
        Console.ReadLine();
        Console.Clear();
    }
